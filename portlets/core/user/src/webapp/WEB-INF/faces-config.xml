<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
"-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
"http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
  <factory>
    <faces-context-factory>org.exoplatform.portlet.faces.context.FacesPortletContextFactoryImpl</faces-context-factory>
    <lifecycle-factory>org.exoplatform.portlet.faces.lifecycle.ExoLifecycleFactory</lifecycle-factory>
  </factory>

  <render-kit>
    <renderer>
      <component-family>org.exoplatform.portlets.user.component.UIGroupCommunityInfo</component-family>
      <renderer-type>GroupCommunityInfoRenderer</renderer-type>
      <renderer-class>org.exoplatform.portlets.user.renderer.html.GroupCommunityInfoRenderer</renderer-class>
    </renderer>
    <!-- *********************** need to fix *************************** -->
    <renderer>
      <component-family>org.exoplatform.faces.core.component.UIExoComponent</component-family>
      <renderer-type>UserProfileRenderer</renderer-type>
      <renderer-class>org.exoplatform.portlets.user.renderer.html.UserProfileRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>org.exoplatform.faces.core.component.UIExoComponent</component-family>
      <renderer-type>UserInfoRenderer</renderer-type>
      <renderer-class>org.exoplatform.portlets.user.renderer.html.UserInfoRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>org.exoplatform.faces.core.component.UIExoComponent</component-family>
      <renderer-type>GroupExplorerRenderer</renderer-type>
      <renderer-class>org.exoplatform.portlets.user.renderer.html.GroupExplorerRenderer</renderer-class>
    </renderer>
  </render-kit>
</faces-config>
