  <page>
    <title>My Portal</title>
    <user-page-type>
      <view-permission>any</view-permission>
    </user-page-type>
    <main-column width="*">
      <tab>
        <title>Register</title>
        <column width="*">
          <portlet>
            <title>Register</title>
            <window-id>user/RegisterPortlet/window-register</window-id>
