<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

  <portlet>
    <description xml:lang="EN">User Info</description>
    <portlet-name>UserInfo</portlet-name>
    <display-name xml:lang="en">User Info</display-name>
    <portlet-class>org.exoplatform.portlet.faces.ExoFacesPortlet</portlet-class>

    <init-param>
      <name>default-view</name>
      <value>org.exoplatform.portlets.user.component.UIUserProfilePortlet.class</value>
    </init-param>

    <expiration-cache>-1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>

    <supported-locale>EN</supported-locale>

    <resource-bundle>locale.portlet.user.UserResource</resource-bundle>

    <portlet-info>
      <title>User Info</title>
      <short-title>User Info</short-title>
      <keywords>user</keywords>
    </portlet-info>
  </portlet>

  <portlet>
    <description xml:lang="EN">Organization</description>
    <portlet-name>Organization</portlet-name>
    <display-name xml:lang="en">Organization Admin</display-name>
    <portlet-class>org.exoplatform.portlet.faces.ExoFacesPortlet</portlet-class>

    <init-param>
      <name>default-view</name>
      <value>org.exoplatform.portlets.user.component.UIOrganizationPortlet.class</value>
    </init-param>

    <init-param>
      <name>default-edit</name>
      <value>org.exoplatform.portal.portlet.faces.component.UIPreferencesEditor.class</value>
    </init-param>

    <expiration-cache>-1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>

    <supported-locale>EN</supported-locale>

    <resource-bundle>locale.portlet.user.UserResource</resource-bundle>

    <portlet-info>
      <title>User Browser</title>
      <short-title>User Browser</short-title>
      <keywords>user</keywords>
    </portlet-info>

    <security-role-ref>
      <role-name>admin</role-name>
      <role-link>admin</role-link>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
      <role-link>user</role-link>
    </security-role-ref>
  </portlet>
  
  <portlet>
    <description xml:lang="EN">Register Portlet</description>
    <portlet-name>RegisterPortlet</portlet-name>
    <display-name xml:lang="en">RegisterPortlet</display-name>
    <portlet-class>org.exoplatform.portlet.faces.ExoFacesPortlet</portlet-class>

    <init-param>
      <name>default-view</name>
      <value>org.exoplatform.portlets.user.component.UINewAccountPortlet.class</value>
    </init-param>

    <expiration-cache>-1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>

    <supported-locale>en</supported-locale>

    <resource-bundle>locale.portlet.user.Register</resource-bundle>

    <portlet-info>
      <title>Register Portlet</title>
      <short-title>Register Portlet</short-title>
      <keywords>register</keywords>
    </portlet-info>
  </portlet>

  <portlet>
    <description xml:lang="EN">Welcome portlet</description>
    <portlet-name>WelcomePortlet</portlet-name>
    <display-name xml:lang="en">Welcome</display-name>
    <portlet-class>org.exoplatform.portlet.faces.ExoFacesPortlet</portlet-class>

    <init-param>
      <name>default-view</name>
      <value>org.exoplatform.portlets.user.component.UIWelcomePortlet.class</value>
    </init-param>

    <expiration-cache>-1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>

    <supported-locale>EN</supported-locale>

    <resource-bundle>locale.portlet.user.WelcomePortlet</resource-bundle>

    <portlet-info>
      <title>Welcome Portlet</title>
      <short-title>welcome</short-title>
      <keywords>login, welcome</keywords>
    </portlet-info>
  </portlet>

</portlet-app>
