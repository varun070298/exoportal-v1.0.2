<!--  Datasource config for MySQL using 2.0.11 driver                     -->
<!-- ==================================================================== -->
<datasources>
  <local-tx-datasource>
    <jndi-name>jdbc/ExoDS</jndi-name>
    <connection-url>jdbc:mysql://localhost:3306/exodb?relaxAutoCommit=true</connection-url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <user-name>exo</user-name>
    <password>exo</password>
  </local-tx-datasource>
</datasources>
