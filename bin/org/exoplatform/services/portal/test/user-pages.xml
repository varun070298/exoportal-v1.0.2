<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <default-locale>en</default-locale>
  <security>public</security>
  <default-style>blue-lagoon</default-style>

  <banner>
    <portlet showInfoBar="false" style="banner">
      <window-id>web/BannerPortlet/window-banner</window-id>
    </portlet>
  </banner>

  <personal-pages>
    <resource-name>pages.properties</resource-name>
    <page default="true">
      <title>Home</title>
      <user-page-type>
        <view-permission>any</view-permission>
      </user-page-type>
      <main-column width="200">
        <tab default="true">
          <title>tab 1</title>
          <column width="*">
            <portlet>
              <title>Welcome</title>
              <window-id>user/WelcomePortlet/window-welcome-user</window-id>
            </portlet>
            <portlet>
              <title>Download page</title>
              <window-id>content/DisplayContent/window-download</window-id>
            </portlet>
            <portlet>
              <title>Need support?</title>
              <window-id>content/DisplayContent/window-company</window-id>
            </portlet>          
          </column>
        </tab>
      </main-column>
      <main-column width="*" renderer="default">
        <tab>
          <title>Welcome</title>
          <column width="*">
            <portlet>
              <title>Exo Portal</title>
              <window-id>web/RssPortlet/window-exo-portal-rss</window-id>
            </portlet>        
          </column>
        </tab>           
        <tab>
          <title>News</title>
          <column width="*">
            <portlet>
              <title>What's new...</title>
              <window-id>web/RssPortlet/window-news</window-id>
            </portlet>
          </column>
        </tab>                     
      </main-column>
      <main-column width="200" renderer="default">
        <tab default="true">
          <title>tab 1</title>
          <column width="*">
            <portlet>
              <title>Related projects</title>
              <window-id>content/DisplayContent/window-related-projects</window-id>
            </portlet>            
            <portlet>
              <title>Some statistics</title>
              <window-id>content/DisplayContent/window-statistic</window-id>
            </portlet>
          </column>
        </tab>
      </main-column>
    </page>
  </personal-pages>

  <footer>
    <portlet showInfoBar="false" style="footer">
      <window-id>web/FooterPortlet/window-footer</window-id>
    </portlet>
  </footer>

</portal-config>
