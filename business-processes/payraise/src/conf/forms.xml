<forms>

  <form>
  	<resource-bundle>start</resource-bundle>
  	<state-name>start</state-name>
    <variable name="reason" />
    <variable name="amount.asked" format="org.exoplatform.services.workflow.format.DoubleFormat" />
  </form>

  <form>
  	<resource-bundle>evaluation</resource-bundle>
  	<state-name>evaluation</state-name>
    <variable name="requester" />
    <variable name="reason" />
    <variable name="amount.asked"   format="org.exoplatform.services.workflow.format.DoubleFormat" />
    <variable name="amount.granted" format="org.exoplatform.services.workflow.format.DoubleFormat" />
    <submitbutton value="grant" transition-name="grant" />
    <submitbutton value="deny" transition-name="deny" />
  </form>

  <form>
  	<resource-bundle>hr</resource-bundle>
  	<state-name>hr update</state-name>
    <variable name="requester" />
    <variable name="amount.granted" format="org.exoplatform.services.workflow.format.DoubleFormat" />
  </form>

</forms>
