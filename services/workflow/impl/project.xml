<?xml version="1.0"?>
<project>
  <extend>${basedir}/../../../build/project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>exoplatform.services.workflow.impl</id>
  <name>eXo Workflow Service Impl</name>
  <shortDescription>eXo Workflow Impl</shortDescription>

  <dependencies>
    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.workflow.api</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <!-- tests -->
    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.commons</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.container</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.common.api</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.database.api</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.common.impl</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.database.impl</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.test.framework</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>jbpm</groupId>
      <artifactId>jbpm</artifactId>
      <version>2.0-beta2</version>
    </dependency>

  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.conf</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>              
</project>
