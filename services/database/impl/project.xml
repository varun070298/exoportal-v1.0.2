<?xml version="1.0"?>
<project>
  <extend>${basedir}/../../../build/project.xml</extend>
  <id>exoplatform.services.database.impl</id>
  <name>eXo database Service impl</name>
  <package>exo.services.*</package>
  <description>eXo database Service impl</description>
  <shortDescription>eXo database Service impl</shortDescription>

  <dependencies>
    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.commons</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.test.framework</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.common.api</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.database.api</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.container</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>

    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.common.impl</artifactId>
      <version>${exoplatform.version}</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
